{
    "name": "rezozero/subscribeme",
    "description": "Unified Email Service Library: A simple mailing list subscriber factory that includes a mailing list subscription feature and the ability to send transactional emails.",
    "type": "library",
    "require": {
        "php":">=8.0",
        "psr/http-client": "*",
        "psr/http-factory": "*",
        "ext-json": "*"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Ambroise Maupate",
            "email": "ambroise@rezo-zero.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "SubscribeMe\\": "src/SubscribeMe"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "SubscribeMe\\Test\\": "tests/"
        }
    },
    "require-dev": {
        "phpstan/phpstan": "^1.9.2",
        "squizlabs/php_codesniffer": "^3.5.4",
        "phpunit/phpunit": "^9.6",
        "php-http/mock-client": "^1.6",
        "nyholm/psr7": "^1.8"
    },
    "config": {
        "allow-plugins": {
            "php-http/discovery": true
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "2.0.x-dev"
        }
    }
}
