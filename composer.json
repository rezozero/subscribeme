{
    "name": "rezozero/subscribeme",
    "description": "Simple Mailing-list subscriber factory.",
    "type": "library",
    "require": {
        "php":">=8.0",
        "psr/http-client": "*",
        "psr/http-factory": "*",
        "ext-json": "*"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Ambroise Maupate",
            "email": "ambroise@rezo-zero.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "SubscribeMe\\": "src/SubscribeMe"
        }
    },
    "require-dev": {
        "phpstan/phpstan": "^1.9.2",
        "squizlabs/php_codesniffer": "^3.5.4",
        "phpunit/phpunit": "^11.3",
        "php-http/mock-client": "^1.6",
        "nyholm/psr7": "^1.8"
    },
    "config": {
        "allow-plugins": {
            "php-http/discovery": true
        }
    }
}
